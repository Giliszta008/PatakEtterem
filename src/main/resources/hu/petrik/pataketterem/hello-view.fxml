<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.petrik.pataketterem.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <TableView fx:id="tableViewEtel" prefHeight="200.0" prefWidth="200.0" />
      <HBox>
         <children>
            <VBox prefHeight="200.0" prefWidth="380.0">
               <children>
                  <Button fx:id="buttonLegDragabbDesszertek" disable="true" mnemonicParsing="false" onAction="#onButtonLegDragabbDesszertekClick" text="Legdrágább desszert">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin></Button>
                  <HBox>
                     <children>
                        <Button fx:id="buttonHetiOsszBevetel" disable="true" mnemonicParsing="false" onAction="#onButtonHetiOsszBevetelClick" text="Heti összbevétel" />
                        <Label fx:id="labelHetiOsszBevetel" opacity="0.0" prefWidth="100.0" style="-fx-background-color: green;" textAlignment="CENTER">
                           <HBox.margin>
                              <Insets bottom="5.0" left="50.0" right="10.0" top="5.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </HBox>
                  <Button fx:id="buttonEtelekSzazalekosan" disable="true" mnemonicParsing="false" onAction="#onButtonEtelekSzazalekosanClick" text="Ételek százalékosan">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin></Button>
                  <Button fx:id="buttonFajlbaIr" disable="true" mnemonicParsing="false" onAction="#onButtonFajlbaIrClick" text="Fájlba ír">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin></Button>
               </children>
            </VBox>
            <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="380.0">
               <children>
                  <Button fx:id="buttonFajlBeolvas" mnemonicParsing="false" onAction="#onButtonFajlBeolvasClick" style="-fx-background-color: green;" text="Fájl beolvas">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin></Button>
                  <Button fx:id="buttonHibasAdatTorlese" disable="true" mnemonicParsing="false" onAction="#onButtonHibasAdatTorleseClick" text="Hibás adat törlése">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin></Button>
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="buttonKilep" mnemonicParsing="false" onAction="#onButtonKilepClick" style="-fx-background-color: red;" text="Kilép">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
   </children>
</VBox>
